<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.rtl.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<input type="button" value="فرخوانی کتاب ها" id="btnBook" class="btn btn-primary" />
<div id="resultBooks"></div>

<script>
    $("#btnBook").on("click", function () {
        $.ajax({
            url: "/Home/GetBooks",
            success(result) {
                var element = '<select id="books" >'
                for (var i = 0; i < result.length; i++) {
                    element += '<option>' + result[i].BookName + ' </option> '
                }

                element += "</select>"
                document.getElementById("resultBooks").innerHTML = element;


            },
            error(e) {

            }
        });
    });


</script>